<!-- Validation failure messages -->
<% if @connection.errors.any? %>
  <% @connection.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit <%= @connection.name %>'s Profile</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_connection/<%= @connection.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for company -->
      <div class="form-group">
        <label for="company" class="control-label">
          Company
        </label>

        <input type="text" id="company" name="company" placeholder="Company" class="form-control" value="<%= @connection.company %>">
      </div>

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @connection.name %>">
      </div>

      <!-- Hidden input for user_id -->

      <input type="hidden" name="user_id" value="<%=current_user.id %>">

      <button class="btn btn-warning">
        Update Connection
      </button>
      or
      <a href="/connections">Cancel</a>
    </form>
  </div>
</div>
